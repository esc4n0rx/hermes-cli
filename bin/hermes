
import { Command } from 'commander';
const program = new Command();

program
  .name('hermes')
  .description('CLI de desenvolvimento com IA')
  .version('1.0.0');

program
  .command('start')
  .alias('s')
  .description('Iniciar Hermes')
  .action(async () => {
    await import('../src/index.js');
  });

program
  .command('config')
  .alias('c')
  .description('Configurar Hermes')
  .action(async () => {
    const { showSettings } = await import('../src/config/settings.js');
    await showSettings();
  });

program
  .command('projects')
  .alias('p')
  .description('Ver projetos recentes')
  .action(async () => {
    const { showRecentProjects } = await import('../src/utils/helpers.js');
    await showRecentProjects();
  });

// Se nenhum comando for fornecido, iniciar normalmente
if (process.argv.length === 2) {
  await import('../src/index.js');
} else {
  program.parse();
}